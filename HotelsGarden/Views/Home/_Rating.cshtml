@model HotelInfo
@using HotelsGarden.Models.View

@{
    var stars = double.Parse(Model.StarRating);
}

<small class="text-@(Model.GuestReviewRating > 2.5 ? "success" : "danger")">
    (
    @for (int i = 0; i < stars; i++)
    {
        <i class="glyphicon glyphicon-star"></i>
    }

    @if (stars <= 4)
    {
        @for (int j = 0; j < (5 - Math.Ceiling(stars)); j++)
        {
            <i class="glyphicon glyphicon-star-empty"></i>
        }
    }
    ▬ Rated: @Model.GuestReviewRating / 5 by @Model.ReviewTotal guests)
</small>